# percent
test percent-1.1 {shows ~0.0 for small values} -body {

    set vals ""
    foreach frac {
        0.0
        0.001
        0.003
        0.005
        0.0051
        0.009
        0.01
        0.02
        0.1
    } {
        append vals [percent $frac]
    }
    set vals
    
} -result {  0% ~0% ~0% ~0%  1%  1%  1%  2% 10%}

