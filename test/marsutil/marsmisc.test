#-------------------------------------------------------------------
# gettimeofday

test gettimeofday-1.1 {compare with clock seconds} -body {
    # FIRST, get the time by both methods.
    set t0 [gettimeofday]
    set t1 [clock seconds]

    # NEXT, convert t0 to an integer.
    set t0 [expr {int($t0)}]

    # NEXT, t1 might be 1 second later than t0, since it was
    # called later.
    expr {$t0 == $t1 || $t0 == $t1 - 1}
} -result {1}

