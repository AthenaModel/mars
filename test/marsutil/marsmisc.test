# pickfrom
#
# This is difficult to test, as the result is random.

test pickfrom-1.1 {result is always in list} -body {
    set count 0
    set choices {a b c d}

    for {set i 0} {$i < 1000} {incr i} {
        set choice [pickfrom $choices]

        if {[lsearch $choices $choice] != -1} {
            incr count
        }
    }

    set count
} -result {1000}

