    # monitor

    variable UpdatedRows

    proc monitor_setup {} {
        variable UpdatedRows

        sqldocument db
        db open :memory:

        db eval {
            CREATE TABLE mytab(
               a INTEGER,
               b INTEGER,
               c TEXT,
               PRIMARY KEY (a,b)
            );

            INSERT INTO mytab(a,b,c) VALUES(1,2,'FOO');
            INSERT INTO mytab(a,b,c) VALUES(3,4,'BAR');
        }

        db monitor add mytab {a b}

        set UpdatedRows [list]
        notifier bind [namespace current]::db <mytab> \
            ::test [namespace current]::MonitorEvent

        notifier bind [namespace current]::db <Monitor> \
            ::test [list [namespace current]::MonitorEvent <Monitor> ""]
    }

    proc MonitorEvent {op key} {
        variable UpdatedRows
        lappend UpdatedRows $op $key
    }

